<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_navigation_view_height</item>
        <item name="android:background">@color/bottom_navigation_color</item>
        <item name="itemIconTint">@color/bottom_navigation_menu_item_color</item>
        <item name="itemTextColor">@color/bottom_navigation_menu_item_color</item>
        <item name="menu">@menu/bottom_navigation</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleMarginStart">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/PopupOverlay</item>
    </style>
</resources>
